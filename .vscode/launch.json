{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Backend: Debug with Inspector",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/dist/index.js",
      "preLaunchTask": "npm: build-debug",
      "runtimeArgs": ["--inspect", "--max-old-space-size=4096"],
      "outFiles": ["${workspaceFolder}/backend/dist/**/*.js"],
      "cwd": "${workspaceFolder}/backend",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Frontend: Debug Jest Tests",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--config",
        "frontend/jest.config.js"
      ]
    }, {
      "type": "node",
      "request": "launch",
      "name": "Backend: Debug Jest Tests",
      "program": "${workspaceFolder}/backend/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--config",
        "./jest.config.ts"
      ],
      "cwd": "${workspaceFolder}/backend",
      "runtimeArgs": ["-r", "ts-node/register"],
      "outFiles": ["${workspaceFolder}/backend/src/**/*.js", "${workspaceFolder}/backend/src/**/*.map"]
    }
  ]
}
