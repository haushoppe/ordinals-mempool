{
  "name": "ordpool",
  "description": "Scripts for local development",
  "scripts": {
    "link-ordool-parser:frontend": "cd frontend && npm link ordpool-parser",
    "link-ordool-parser:backend": "cd backend && npm link ordpool-parser",
    "link-ordool-parser": "npm run link-ordool-parser:frontend && link-ordool-parser:backend",

    "unlink-ordool-parser:frontend": "cd frontend && npm unlink --no-save ordpool-parser",
    "unlink-ordool-parser:backend": "cd backend && npm unlink --no-save ordpool-parser",
    "unlink-ordool-parser": "npm run unlink-ordool-parser:frontend && unlink-ordool-parser:backend"
  }
}
